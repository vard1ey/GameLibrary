<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_blue"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_blue"
            android:text="Информация о игре"
            android:textSize="25dp"
            android:padding="16dp"
            android:gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_blue"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/accent_teal"
                    app:hintTextColor="@color/text_gray">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/titleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Название игры"
                        android:textColor="@color/text_white"
                        android:textColorHint="@color/text_white"
                        android:textColorLink="@color/text_white" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Жанр"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/genreSpinner"
                    android:layout_width="match_parent"
                    android:textColor="@color/text_white"
                    android:textColorHint="@color/text_white"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Платформа"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/platformSpinner"
                    android:layout_width="match_parent"
                    android:textColor="@color/text_white"
                    android:textColorHint="@color/text_white"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/chooseAppLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Приложение для запуска (только для Mobile)"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/chooseAppButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Выбрать приложение"
                    android:textColor="@color/text_white"
                    android:backgroundTint="@color/light_blue"
                    android:layout_marginBottom="8dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/selectedAppTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Приложение не выбрано"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/accent_teal"
                    app:hintTextColor="@color/text_gray">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/notesEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Заметки (необязательно)"
                        android:textColor="@color/text_white"
                        android:textColorHint="@color/text_gray"
                        android:lines="3"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Добавить игру"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:backgroundTint="@color/accent_teal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>